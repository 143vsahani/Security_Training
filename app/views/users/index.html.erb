<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th class="larger-header">Name</th>
      <th class="larger-header">Email</th>
      <th class="larger-header">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user) %>
          

          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          


        </td>
      </tr>
    <% end %>

  </tbody>
  

</table>
<br>
  <%= link_to 'Create New User', new_user_path %>




